# General app configuration
# REQUIRED: Set your domain name (e.g., example.com or api.example.com)
# This MUST NOT be blank - services will fail to start without a valid domain
DOMAIN_NAME=your-domain.com

# Database configuration
# REQUIRED: All three database variables must be set
# DO NOT leave POSTGRES_PASSWORD blank - use a strong password
POSTGRES_DB=analytics
POSTGRES_USERNAME=postgres
POSTGRES_PASSWORD=  # REQUIRED: Set a strong password here (e.g., use 'openssl rand -base64 32')

# API configuration
API_RATE_LIMIT=100  # Max API requests per minute per API key
API_MAX_LOAD=1000000  # Max requests that can be requested by the dashboard
API_PAGE_SIZE=250000  # Max requests loaded internally by a single query

# Logger configuration
LOGGER_RATE_LIMIT=10  # Max logger requests per minute per API key
LOGGER_MAX_INSERT=2000  # Max requests that can be inserted at once by the user
